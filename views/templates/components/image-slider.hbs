{{#json images}}
<div class="image-slider">
  <div class="images">
    {{#each images}}
      <div class="sliding-element {{#ifCond @index 0}}active{{/ifCond}}">
        <div class="image" style="background-image:url({{this.url}})"></div>
        <div class="content">
            <h3>{{this.heading}}</h3>
            <p>{{this.text}}</p>
        </div>
      </div>
   {{/each}} 
  </div>
  <div class="slide-controllers">
    <img class="btnPrev" src="../img/arrow-left.svg"/>
    <img class="btnNext" src="../img/arrow-right.svg"/>
  </div>
</div>
{{/json}}
